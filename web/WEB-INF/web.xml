<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
    <context-param>
        <param-name>label-config-location</param-name>
        <param-value>khoaphd.properties.label</param-value>
    </context-param>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>khoaphd.filters.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>khoaphd.filters.UserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>khoaphd.filters.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>MainFilter</filter-name>
        <filter-class>khoaphd.filters.MainFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/createNewTourPage</url-pattern>
        <url-pattern>/createNewTour</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/addToCart</url-pattern>
        <url-pattern>/viewCartPage</url-pattern>
        <url-pattern>/updateAmountOfTour</url-pattern>
        <url-pattern>/removeTourFromCart</url-pattern>
        <url-pattern>/checkDiscountCode</url-pattern>
        <url-pattern>/resetDiscountCode</url-pattern>
        <url-pattern>/submitBooking</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/loginPage</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/loginFB</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MainFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
        <tracking-mode>
            COOKIE
        </tracking-mode>
    </session-config>
    <resource-ref>
        <res-ref-name>SE140609DS</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
<!--    <error-page>
        <location>/error.html</location>
    </error-page>-->
</web-app>